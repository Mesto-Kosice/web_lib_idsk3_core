  },
  "homepage": "https://gitlab.slovenskoit.sk/components/shared-web-libs/esvk_web_lib_idsk_core#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "rollup": "^2.70.1",
    "rollup-plugin-copy": "^3.4.0",
